  <body class="bg-dark">

    <div class="container">
      <h1 style="padding-left: 60px; color: white;"><%= itemName %></h1>
    <br>
    <div class="row mb-4">
        <div class="col-12">
    <div class="card mb-4" >
        <div class="card-body">
          <h5 class="card-title" style="color: white;">Move to:</h5>
          <br>
                 
         
                 <form action="/detailmove" method="post">
              
                  <select name="theatre"class="form-select form-select-sm" style="width: 150px;" required>
                    <option selected disabled value="">Theatre</option>
                    <option value="A">Theatre A</option>
                    <option value="B">Theatre B</option>
                    <option value="C">Theatre C</option>
                    <option value="D">Theatre D</option>
                    <option value="E">Theatre E</option>
                    <option value="F">Theatre F</option>
                    <option value="G">Theatre G</option>
                    <option value="H">Theatre H</option>
                    <option value="I">Theatre I</option>
                    <option value="J">Theatre J</option>
                    <option value="O">Theatre O</option>
                    <option value="P">Theatre P</option>
                    <option value="Q">Theatre Q</option>
                    <option value="R">Theatre R</option>
                    <option value="S">Theatre S</option>
                    <option value="T">Theatre T</option>
                    <option value="U">Theatre U</option>
                    <option value="V">Theatre V</option>
                    <option value="W">Theatre W</option>
                    <option value="X">Theatre X</option>
                    <option value="Y">Theatre Y</option>
                    <option value="Z">Theatre Z</option>
                    <option value="C1A">C1A</option>
                    <option value="C3B">C3B</option>
                    <option value="C4B">C4B</option>
                    <option value="C2A">C2A</option>
                    <option value="C5B">C5B</option>
                    <option value="Ward">Ward</option>
                    <option value="PACU">PACU/Recovery</option>
                    <option value="6th">6th Floor</option>
                    <option value="C8B">C8B</option>
                    <option value="ECT">ECT</option>
                    <option value="A5">A5</option>
                    <option value="POMS">POMS</option>
                    <option value="Faulty" style="color:red;">Faulty</option>
                    <option value="Other">Other</option>
                    <option value="Store">Main Store</option>
                   
                  </select>
                  <br>
               
                  <input type="hidden" name="itemName" value="<%= itemName %>">
                  <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                <!-- </td> -->
                 </form>
                </div>
    </div>
    
             
          <!-- New Card for "Return to Base" -->
<div class="card" style="margin-top:20px;"> <!-- Add some top margin for spacing -->
  <div class="card-body">
      <h5 class="card-title" style="color: white;">Return to Base:</h5>
      <form action="/detailreturn" method="post">
        <br>
        <input type="hidden" name="itemName" value="<%= itemName %>">
          <button type="submit" class="btn btn-primary">Go</button>
      </form>
  </div>
</div>
            <br>
           
                  
               
                <br>
                
                <div class="row mb-4">
                  <div class="col-12">
              <div class="card mb-4" >
                  <div class="card-body">
                    <h5 class="card-title" style="color: white;">Today's moves:</h5>
                    <br>
                    <% for(let move of moves) { %>
                      <!-- display each move's theatre and time -->
                      <div class="row" style="color: white;">
                        <div class="col-6">
                          Theatre: <%= move.theatre %>
                        </div>
                        <div class="col-6">
                          Time: <%= new Date(move.date).toLocaleTimeString("en-US", { timeZone: "Africa/Johannesburg", hour12: false }) %>
                        </div>
                      </div>    
                    <% } %>
                    
                    
                  </div>
                </div>
              </div>
            </div>
                
            
    
    

    

          
               
            


