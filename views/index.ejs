        <script src="https://cdn.jsdelivr.net/npm/jsqr@1.3.1/dist/jsQR.js"></script>

        <script>
          // Function to start QR code scanning
          function startQRScanning() {
            let video = document.getElementById("video");
            let loadingContainer = document.getElementById("loading-container");
            let modal = document.getElementById("cameraModal");
        
            // Hide the video and modal initially
            video.style.display = "none";
            modal.style.display = "none";
        
            navigator.mediaDevices.getUserMedia({ video: { facingMode: 'environment' } })
              .then(function(stream) {
                video.srcObject = stream;
                video.setAttribute("playsinline", true);
                video.play();
        
                requestAnimationFrame(tick);
        
                function tick() {
                  if (video.readyState === video.HAVE_ENOUGH_DATA) {
                    // QR code scanning logic
                    let canvas = document.createElement("canvas");
                    canvas.width = video.videoWidth;
                    canvas.height = video.videoHeight;
                    let ctx = canvas.getContext("2d");
                    ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
        
                    let imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                    let code = jsQR(imageData.data, imageData.width, imageData.height, {
                      inversionAttempts: "dontInvert",
                    });
        
                    if (code) {
                      console.log("Found QR code:", code.data);
                      window.location.href = `/detail?itemName=${code.data}`;
                      // More code ...
                    }
                  }
        
                  // QR code found, hide loading container and show video
                  loadingContainer.style.display = "none";
                  video.style.display = "block";
                  modal.style.display = "none"; // Hide the modal as well if needed
                  // Handle the scanned QR code, e.g., redirect to a URL
                  if (code) {
                    window.location.href = `/detail?itemName=${code.data}`;
                  }
                  
                  // More code ...
                }
        
                // Initial call to tick function
                tick();
              });
          }
        
          // Event listener to trigger QR code scanning when the "startScan" button is clicked
          document.getElementById("startScan").addEventListener("click", function() {
            // Show the modal and loading container when scanning starts
            document.getElementById("cameraModal").style.display = "block";
            document.getElementById("loading-container").style.display = "block";
            startQRScanning();
          });
        
          // Event listener to close the modal when the close button is clicked
          document.querySelector(".close").addEventListener("click", function() {
            document.getElementById("cameraModal").style.display = "none";
          });
        </script>
        
        
        
